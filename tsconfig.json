{
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "teak-ui/*": [
        "packages/*"
      ]
    }
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.tsx",
  ]
}
